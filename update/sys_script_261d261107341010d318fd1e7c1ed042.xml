        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

	if(!current.raised_from.changes() && current.raised_from_table.changes()) {
		current.raised_from_table = previous.raised_from_table;
		return;
	}

	var dt = new devTrackServer();
	var tables = dt.getM2MTables(current.getTableName(), null, 'to_tableIN'+dt.relatedRecordM2Ms, current.raised_from_table);
	var response = dt.updateMainM2M(tables, current.sys_id, current.raised_from);
	
	var msg = 'The Raised From record has been related to this development, see appropriate related list.';
	//if any main rel flags were removed
	if(response.some(function(r){return r.action=="update_remove"?true:false;})) {
		msg += ' The previous relationship will not be removed from the related list.';
	}
	gs.addInfoMessage(msg);
	
	
	

})(current, previous);]]></script>
